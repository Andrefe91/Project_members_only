<h2>New Article</h2>

<%= @post.errors.full_messages %>


<%= form_with model: @post do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

    <div>
        <%= form.submit %>
    </div>

    <div>
        <%= link_to "Back", root_path %>
    </div>

<% end %>
